<% if @user.errors.any? %>
<div class="card border-danger mb-3 col-sm-6 offset-3" >
  <div  class= "card-text text-danger">
    <h3>
    <%= pluralize(@user.errors.count, "error") %> found:
    </h3>
    <ul>
    <% @user.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>

<h1 class="text-center">Sign up now</h1>
<br>
<%= form_with(model: @user, local:true) do |f| %>
<div class="form-group row">
<div  class="col-sm-2 col-form-label text-right">
  <%= f.label :username %>
</div>
<div class="col-sm-8">
<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
</div>
</div>

<div class="form-group row">
<div  class="col-sm-2 col-form-label text-right">
<%= f.label :password %>
</div>
<div class="col-sm-8">
<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
</div>
</div>

<div class="form-group row">
<div class="offset-sm-2 col-sm-10">
  <%= f.submit 'Sign up' , class: 'btn btn-primary' %>
</div>
</div>
<% end %>
